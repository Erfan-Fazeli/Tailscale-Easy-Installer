{
	"name": "Tailscale Exit Node",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"runArgs": [
		"--cap-add=NET_ADMIN",
		"--cap-add=NET_RAW",
		"--cap-add=SYS_MODULE"
	],
	"mounts": [
		"source=/dev/net/tun,target=/dev/net/tun,type=bind"
	],
	"containerEnv": {
		"CODESPACES": "true",
		"HTTP_PORT": "8080"
	},
	// Auto-start Tailscale when Codespace opens
	"postStartCommand": "nohup sudo /usr/local/bin/start.sh > /tmp/tailscale.log 2>&1 & echo 'âœ… Tailscale starting in background. View logs: tail -f /tmp/tailscale.log'",
	"forwardPorts": [8080],
	"portsAttributes": {
		"8080": {
			"label": "Health Check",
			"onAutoForward": "notify"
		}
	}
}
