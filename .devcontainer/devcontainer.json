{
  "name": "Tailscale Node",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "forwardPorts": [8080],
  "capAdd": ["NET_ADMIN", "NET_RAW"],
  "runArgs": [
    "--privileged",
    "--device=/dev/net/tun"
  ],
  "remoteEnv": {
    "TAILSCALE_AUTH_KEY": "${localEnv:TAILSCALE_AUTH_KEY}",
    "HOSTNAME_PREFIX": "${localEnv:HOSTNAME_PREFIX:Node}",
    "HTTP_PORT": "8080"
  },
  "postStartCommand": "/entrypoint.sh > /tmp/tailscale.log 2>&1 &",
  "postAttachCommand": "echo '━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━' && tail -f /tmp/tailscale.log",
  "overrideCommand": true
}
