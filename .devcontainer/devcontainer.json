{
	"name": "Tailscale Exit Node",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"runArgs": [
		"--cap-add=NET_ADMIN",
		"--cap-add=NET_RAW",
		"--cap-add=SYS_MODULE"
	],
	"mounts": [
		"source=/dev/net/tun,target=/dev/net/tun,type=bind"
	],
	"containerEnv": {
		"CODESPACES": "true"
	},
	// Auto-start Tailscale when Codespace opens
	"postStartCommand": "sudo -E /start.sh",
	"forwardPorts": [8080],
	"portsAttributes": {
		"8080": {
			"label": "Health Check",
			"onAutoForward": "notify"
		}
	}
}
